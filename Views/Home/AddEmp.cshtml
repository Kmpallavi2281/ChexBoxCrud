@model login.Models.EmpModel
@{
    ViewBag.Title = "AddEmp";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Forms</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Basic Form Elements
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("AddEmp", "Home", FormMethod.Post))
                                {
                                    <div>

                                        @Html.HiddenFor(m => m.Id)
                                    </div>
                                    <div>
                                        <label>Name</label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                    <div>
                                        <label>Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                    <div>
                                        <label>Mob</label>
                                        @Html.TextBoxFor(m => m.Mob, new { @class = "form-control" })
                                    </div>
                                    <div>
                                        <label>Department</label>
                                        @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
                                    </div>
                                    <div>
                                        <label>Companey</label>
                                        @Html.TextBoxFor(m => m.Companey, new { @class = "form-control" })
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <button type="reset" class="btn btn-danger">reset</button>
                                }
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
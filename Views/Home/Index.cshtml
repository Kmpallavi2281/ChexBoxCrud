<link href="~/Content/css/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/Content/css/css/startmin.css" rel="stylesheet" />
<link href="~/Content/css/css/font-awesome.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            @TempData["reqred"]
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-Mail" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <div class="form-group">
                            @TempData["Password"]
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <br />
                        <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/js/jquery.min.js"></script>
<script src="~/Scripts/js/js/bootstrap.min.js"></script>
<script src="~/Scripts/js/js/metisMenu.min.js"></script>
